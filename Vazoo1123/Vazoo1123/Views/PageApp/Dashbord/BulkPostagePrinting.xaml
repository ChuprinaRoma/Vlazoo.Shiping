<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vazoo1123.Views.PageApp.Dashbord.BulkPostagePrinting"
             Title="Bulk Postage Printing"
             xmlns:local="clr-namespace:Vazoo1123.NewElement">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding PostageTotal}"/>
        <ToolbarItem Text="{Binding TotalLabels}"/>
        <ToolbarItem Text="S" Command="{Binding GoToSettingsCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="OrderList" ItemsSource="{Binding SelectProduct}" IsRefreshing="{Binding IsBusy}" IsPullToRefreshEnabled="True"
                      HasUnevenRows="True" SeparatorColor="#2c4dff" Refreshing="ToolbarItem_Clicked">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout x:Name="st" Padding="5" BackgroundColor="White">
                                    <StackLayout Orientation="Horizontal" BackgroundColor="White">
                                        <StackLayout HorizontalOptions="Start">
                                            <Image HorizontalOptions="Start" HeightRequest="65" WidthRequest="65" Source="{Binding ImageFile}"/>
                                        </StackLayout>
                                        <StackLayout>
                                            <Label Text="{Binding EBayUserID}"  TextColor="#2c4dff" FontSize="17"/>
                                            <Label Text="{Binding ItemTitle}" TextColor="#2c4dff" FontSize="12"/>
                                            <Label Text="{Binding ShopperEmail}" TextColor="#2c4dff" FontSize="12"/>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="Price:" FontSize="12" TextColor="#2c4dff"/>
                                                <FlexLayout>
                                                    <Label Text="$" FontSize="12" TextColor="#2c4dff"/>
                                                    <Label Text="{Binding TransactionPrice}" FontSize="12" TextColor="#2c4dff"/>
                                                    <Label Text="{Binding TotalTransactionPrice}" FontSize="12" TextColor="#2c4dff"/>
                                                </FlexLayout>
                                            </StackLayout>
                                        </StackLayout>
                                        <StackLayout WidthRequest="320">
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="Item Id:" FontSize="12" TextColor="#2c4dff"/>
                                                <Label x:Name="itemId" Text="{Binding EBayItemID}" FontSize="12" TextColor="#2c4dff"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="Record Id:" FontSize="12" TextColor="#2c4dff"/>
                                                <Label x:Name="recordId" Text="{Binding RecordNumber}" FontSize="12" TextColor="#2c4dff"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="Qty:" VerticalTextAlignment="Center" FontSize="12" TextColor="#2c4dff"/>
                                                <local:CrossEdit Text="{Binding LabelsQty}" Placeholder="Qty" FontSize="12" TextColor="#2c4dff"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Image Source="update1.jpg" HeightRequest="20" WidthRequest="20" HorizontalOptions="Center" Margin="20, 0, 0, 0">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" NumberOfTapsRequired="1" />
                                                    </Image.GestureRecognizers>
                                                </Image>
                                                <Image Source="update1.jpg" HeightRequest="20" WidthRequest="20" HorizontalOptions="Center" Margin="10, 0, 0, 0"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Button Text="Display Shiping" HorizontalOptions="Center" Margin="20, 0, 0, 0" HeightRequest="50" WidthRequest="70"
                                                        FontSize="10" TextColor="White" BackgroundColor="#2c4dff" BorderWidth="0" Clicked="Button_Clicked" />
                                            </StackLayout>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="Weight:" FontSize="12"  TextColor="#2c4dff" VerticalTextAlignment="Center"/>
                                            <local:CrossEntry x:Name="WLbsCrEntry" FontSize="12"  Keyboard="Numeric" Placeholder="Num" Text="{Binding WeightLBS}" TextChanged="WOzCrEntry_TextChanged"/>
                                            <Label Text="(lbs)" FontSize="12" TextColor="#2c4dff" VerticalTextAlignment="Center"/>
                                            <local:CrossEntry x:Name="WOzCrEntry" FontSize="12"  Placeholder="Num" Text="{Binding WeightOZ}" TextChanged="WOzCrEntry_TextChanged"/>
                                            <Label Text="(oz)" FontSize="12" TextColor="#2c4dff" VerticalTextAlignment="Center"/>
                                            <local:CrossEntry x:Name="WkgCrEntry" FontSize="12"  Keyboard="Numeric" Placeholder="Num" Text="{Binding WeightKG}" TextChanged="WOzCrEntry_TextChanged"/>
                                            <Label Text="(kg)" FontSize="12"  TextColor="#2c4dff" VerticalTextAlignment="Center"/>
                                        </StackLayout>
                                        <StackLayout  Orientation="Horizontal">
                                            <Label FontSize="12" Text="Dim (in):" TextColor="#2c4dff" VerticalTextAlignment="Center"/>
                                            <local:CrossEntry FontSize="12"  Keyboard="Numeric" Placeholder="Num" Text="{Binding DimensionsL}" TextChanged="CrossEntry_TextChanged"/>
                                            <Label Text="X" FontSize="12"  TextColor="#2c4dff" VerticalTextAlignment="Center"/>
                                            <local:CrossEntry FontSize="12"  Keyboard="Numeric" Placeholder="Num" Text="{Binding DimensionsW}" TextChanged="CrossEntry_TextChanged"/>
                                            <Label Text="X" FontSize="12"  TextColor="#2c4dff" VerticalTextAlignment="Center"/>
                                            <local:CrossEntry FontSize="12"  Keyboard="Numeric" Placeholder="Num" Text="{Binding DimensionsH}" TextChanged="CrossEntry_TextChanged"/>
                                        </StackLayout>
                                        <Label Text="{Binding StrCalc}" TextColor="#2c4dff" Margin="5, 0, 0, 0" VerticalTextAlignment="Start" FontSize="12"/>
                                    </StackLayout>
                                    <Frame Padding="3" BorderColor="#2c4dff" CornerRadius="10">
                                        <FlexLayout Direction="Row" Wrap="Wrap">
                                            <Label Text="{Binding Carrier.Title}" TextColor="#2c4dff"/>
                                            <Label Text="$" TextColor="#2c4dff" Margin="5,0,0,0"/>
                                            <Label Text="{Binding Carrier.Price}" TextColor="#2c4dff"/>
                                        </FlexLayout>
                                    </Frame>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                <Button Text="print to local printer" FontSize="12" TextColor="White" BackgroundColor="#2c4dff"/>
                <Button Text="print to remote printer" FontSize="12" TextColor="White" BackgroundColor="#2c4dff" Clicked="Button_Clicked_1"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>