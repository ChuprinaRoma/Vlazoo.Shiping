<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vazoo1123.Views.Messages.Conversation"
             Title="Conversation">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Purchases" Command="{Binding ToPurchasesCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView></ListView>
            <FlexLayout Wrap="Wrap" >
                <Editor FlexLayout.Grow="4" />
                <Button Text="send" FlexLayout.Grow="1"/>
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>